<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="60px" android:background="#CCCCAA">
	<ImageView android:layout_height="wrap_content" android:id="@+id/imageView1"
		android:src="@android:drawable/ic_dialog_email" android:layout_width="wrap_content"
		android:layout_alignParentLeft="true" android:padding="10px"></ImageView>
	<TextView android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/imageView1" android:text="TextView"
		android:layout_width="wrap_content" android:layout_alignTop="@+id/imageView1"
		android:textColor="#000000" android:paddingTop="10px" android:id="@+id/txt_1"></TextView>

</RelativeLayout>
